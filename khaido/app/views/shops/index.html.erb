


<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold">Shops</h1>

    <%= link_to new_shop_path, class: button_class(theme: "primary") do %>
    Add New Shop
    <% end %>
  </div>

  <table class="table-auto border-collapse border-slate-400 w-full">
    <thead class="bg-slate-50 dark:bg-slate-700">
      <tr>
        
          <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Name</th>
        
                  <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Type</th>
                
      </tr>
    </thead>

    <tbody>
      <% @shops.each do |shop| %>
      <%= content_tag :tr, id: dom_id(shop), class: dom_class(shop) do %>
      
        <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= link_to shop.name, shop %></td>
      

              <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= shop.type %></td>
      
      
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
